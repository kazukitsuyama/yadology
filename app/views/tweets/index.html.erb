<div class='main'>
        <!-- Responsive navbar-->
        <%= render "shared/header" %>
        <!-- Page content-->
        <div class="container">
            <div class="row">
                <!-- Blog entries-->
                <div class="col-lg-8">
                    <div class='row'>
                      <h2 class='navbar-brand'>新着記事</h2>
                        <ul class='tweet-lists'>
                        <% @tweets.each do |tweet|%>
                        <li class='card mb-4'>
                            <%= link_to image_tag(tweet.images[0], class: "card-img-top"), tweet_path(tweet.id), method: :get %>
                        <div class="card-body">
                            <div class="small text-muted">
                                <%= tweet.yado_name %>
                            </div>
                            <h2 class="card-title h4">
                                <%= tweet.yado_title %>
                            </h2>
                            <div class="icon">
                            <%= image_tag "like.png" ,class:"like-icon" ,width:"20",height:"20"%>
                            (<%= tweet.liked_users.count %>)
                            </div>
                            <%# <p class="card-text">サブタイトル</p> %>
                        </div>
                            </li>
                            <% end %>
                        </ul>
                    </div>
                    <!-- ページネーション-->
                    <nav aria-label="Pagination">
                        <hr class="my-0" />
                        <ul class="pagination justify-content-center my-4">
                        <%= paginate @tweets %>
                        </ul>
                    </nav>
                </div>
                <!-- Side widgets-->
                <%= render "tweets/widget" %>
            </div>
        </div>
</div>
  <!-- Footer-->
  <%= render "shared/footer" %>

  <!-- Bootstrap core JS-->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Core theme JS-->
  <script src="js/scripts.js"></script>