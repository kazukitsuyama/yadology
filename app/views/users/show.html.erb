<div class="main">
  <%= render "shared/header" %>
  
<!-- +++++ Welcome Section +++++ -->
  <div id="ww">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-lg-offset-2 centered">
          <%= image_tag "user.png", class:"user-img" %>
          <p class="top-name">
            <%= @name %>
          </p>
          <% if user_signed_in? && current_user.id %>
          <div class="edit-btn">
          <%= link_to 'アカウントの編集', edit_user_path(current_user), class: "btn btn-primary" %>
          </div>
          <% end %>
        </div>
        <!-- /col-lg-8 -->
      </div>
      <!-- /row -->
    </div>
    <!-- /container -->
  </div>
  <!-- /ww -->



  <div class="container pt">
    <div class="row mt centered">
      <div class="show-lists">
      <div class='row'>
        <h2 class='navbar-brand'>投稿した記事</h2>
          <ul class='tweet-lists'>
          <% @tweets.each do |tweet|%>
          <li class='card mb-4'>
              <%= link_to image_tag(tweet.images[0], class: "card-img-top"), tweet_path(tweet.id), method: :get %>
          <div class="card-body">
              <div class="small text-muted">
                  <%= tweet.yado_name %>
              </div>
              <h2 class="card-title h4">
                  <%= tweet.yado_title %>
              </h2>
              <%# <p class="card-text">サブタイトル</p> %>
          </div>
              </li>
              <% end %>
          </ul>
      </div>
      </div>
  </div>
<%= render "shared/footer" %>

 