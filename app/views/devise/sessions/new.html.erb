<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
<body id="LoginForm">
  <div class="container">
    <div class="login-form">
      <div class="main-div">
        <div class="panel">
          <h2 class="form-heading">ログイン</h2>
        </div>
        <%= render 'shared/error_messages', model: f.object %>
          <form id="Login">
        <div class="form-group">
            <%= f.email_field :email, class:"form-control", id:"inputEmail", placeholder:"メールアドレス", autofocus: true %>
        </div>
        <div class="form-group">
            <%= f.password_field :password, class:"form-control", id:"inputPassword", placeholder:"パスワード" %>
        </div>
        <div class="forgot">
        <a href="reset.html">パスワードを忘れた場合</a>
        </div>
        <%= f.submit "ログインする" ,class:"btn btn-primary" %>
    </form>
    <div class="input-group">
					<span class="input-group-addon addon-facebook">
						<i class="fa fa-fw fa-2x fa-facebook fa-fw"></i>
					</span>
					<a class="btn btn-block btn-facebook" href="#">Facebookでログインする</a>
				</div>

				<div class="input-group">
					<span class="input-group-addon addon-twitter">
						<i class="fa fa-fw fa-2x fa-twitter fa-fw"></i>
					</span>
					<a class="btn btn-block btn-twitter" href="#">Twitterでログインする</a>
				</div>
    </div>
</div>
</div>
</div>
<%end%>