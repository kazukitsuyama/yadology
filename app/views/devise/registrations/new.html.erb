<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<body id="LoginForm">
<div class="container">
  <div class="login-form">
    <div class="main-div">
        <div class="panel">
          <h2 class="form-heading">新規登録する</h2>
        </div>

        <%= render 'shared/error_messages', model: f.object %>
        
      <form id="Login">
        <div class="form-group">
            <%= f.text_field :name, class:"form-control", id:"inputName", placeholder:"ユーザー名", maxlength:"40" %>
        </div>
        <div class="form-group">
            <%= f.email_field :email, class:"form-control", id:"inputEmail", placeholder:"メールアドレス", autofocus: true %>
        </div>
        <div class="form-group">
            <%= f.password_field :password, class:"form-control", id:"inputPassword", placeholder:"パスワード" %>
        </div>
        <div class="forgot">
          <a href="reset.html">すでに登録済みの方はこちら</a>
        </div>
        <%= f.submit "会員登録する" ,class:"btn btn-primary" %>
      </form>
    <div class="input-group">
			<span class="input-group-addon addon-facebook">
				<i class="fa fa-fw fa-2x fa-facebook fa-fw"></i>
			</span>
				<a class="btn btn-block btn-facebook" href="#">Facebookで新規登録する</a>
		</div>
				<div class="input-group">
					<span class="input-group-addon addon-twitter">
						<i class="fa fa-fw fa-2x fa-twitter fa-fw"></i>
					</span>
					<a class="btn btn-block btn-twitter" href="#">Twitterで新規登録する</a>
				</div>
    </div>
</div>
</div>
</div>
<% end %>